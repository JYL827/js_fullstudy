.wrapper {
    width: 100%;
    height: 100vh;
    font-size: 15px;
    background-color: #eee;
}
.top {
    box-sizing: border-box;
    padding: 0 30rpx;
    background-color: #fff;
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.top image {
    width: 45rpx;
    height: 40rpx;
}
.head {
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    padding: 0 30rpx 20rpx 30rpx;
    background-color: #fff;
}
.head__info {
    text-align: center;
}
.pic {
    margin: 0 auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}
.pic image {
    width: 100%;
    height: 100%;
}
.pic::after {
    content: '';
    width: 10rpx;
    height: 10rpx;
    border: 1px solid #eeeeee;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}
.head__name {
    margin: 30rpx 0 20rpx 0;
    font-weight: bold;
}
.edit {
    font-size: 12px;
    color: #858585;
}
.part {
    width: 100%;
    height: 260rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    font-size: 15px;
}
.form {
    height: 130rpx;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.detail {
    text-align: right;
}
.desc {
    margin-top: 10rpx;
    font-size: 12px;
    color: #858585;
}