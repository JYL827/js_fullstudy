/* component/searchBar/searchbar.wxss */
.searchbar {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin: 20rpx 5vw;
    padding: 0 10rpx;
    width: 90vw;
    height: 80rpx;
    border-radius: 20px;
    background-color: #eff0f4;
    color: #90959b;
}
.icon {
    width: 60rpx;
    height: 60rpx;
}
.icon image {
    width: 100%;
    height: 100%;
}
.title {
    width: 490rpx;
    height: 40rpx;
    font-size: 15px;
}
.bookStore {
    margin-left: 0;
    border-left: 1px solid #b9babc;
    box-sizing: border-box;
    padding-left: 20rpx;
    font-size: 15px;
}