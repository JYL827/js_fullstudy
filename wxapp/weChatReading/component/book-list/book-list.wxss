/* component/book-detail/book-list.wxss */
.bookList {
    font-size: 10px;
    font-family: Sans-serif;
}
.book,
.add{
    width: 166rpx;
    margin: 20rpx 40rpx 40rpx 40rpx;
    display: inline-block;
    vertical-align: top;
}
.book image {
    width: 100%;
    height: 220rpx;
    margin-bottom: 10rpx;
    border: 1px solid #eeeeee;
}
.add {
    height: 220rpx;
    position: relative;
    border: 1px solid #eeeeee;   
}
.add image {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
    top: 50%;
}
.open {
    text-align: center;
    color: #858585;
}