/* pages/recommend/recommend.wxss */
.title {
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 50rpx;
    background-color: red;
    color: #fff;
}
.blank {
    position: fixed;
}
.slide {
    margin-left: 1%;
    width: 98%;
    height: 350rpx;
    border-radius: 5px;
    overflow: hidden;
}
.playList-title {
    display: flex;
    width: 100%;
    height: 120rpx;
    align-items: center;
    font-weight: bold;
    font-size: 15px;
}
